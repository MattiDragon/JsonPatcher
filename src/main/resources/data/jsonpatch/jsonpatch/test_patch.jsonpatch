@version 1
@target minecraft:recipes/*arrow.json

val $math = import(math);

function modifyKey($key, $result) {
    apply ($key) {
        '#' = {
            tag: "minecraft:coals",
        };

        if ($result.item == "minecraft:arrow") delete X;
    }
}

if (type != "minecraft:crafting_shaped") return;


val $result = result;
$modifyKey(key, $result);

if (result.item == "minecraft:arrow") {
    pattern[0] = "#";
}
$result.count += $math.abs(1-100);

